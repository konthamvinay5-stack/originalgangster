# Copy to apps/backend/.env and fill values to enable real payments
PORT=4000

# Stripe
STRIPE_SECRET_KEY=sk_test_xxx
STRIPE_PUBLISHABLE_KEY=pk_test_xxx

# PayTM (staging / staging flow)
